ANTHROPIC_API_KEY=your-anthropic-api-key-here
TARGET_URL=https://vernon.ca

# Crawl settings (tuned for vernon.ca — ~1600 pages, ~500 after filtering news)
MAX_CRAWL_PAGES=2000
MAX_CRAWL_DEPTH=10
CRAWL_DELAY=0.3
CRAWL_CONCURRENCY=10
CRAWL_TIMEOUT=15
USE_SITEMAP=true

# News releases (enabled by default — crawls ~360+ news articles from sitemap)
INCLUDE_NEWS_ARCHIVE=true

CORS_ORIGINS=["http://localhost:3000"]

# Database
DATABASE_URL=sqlite:///./vernon_chatbot.db

# Rate limiting
RATE_LIMIT=30/minute
RATE_LIMIT_CHAT=10/minute

# Privacy & data retention
DATA_RETENTION_DAYS=90
MAX_MESSAGE_LENGTH=2000

# Bilingual
DEFAULT_LANGUAGE=en

# Response cache
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=500

# Auto-recrawl (APScheduler)
RECRAWL_ENABLED=false
RECRAWL_CRON_HOUR=2

# Admin dashboard
ADMIN_API_KEY=change-me-to-a-secure-key

# Confidence scoring
CONFIDENCE_THRESHOLD=0.65

# Human handoff contact info
HANDOFF_EMAIL=
HANDOFF_PHONE=
HANDOFF_URL=https://www.vernon.ca/contact-us
HANDOFF_SUMMARY_ENABLED=true

# PDF ingestion (auto-ingest PDFs found during crawl)
INGEST_PDFS=true

# Topic routing (keyword-based department classification)
TOPIC_ROUTING_ENABLED=true

# Council meeting transcription
COUNCIL_MEETINGS_ENABLED=true
WHISPER_MODEL_SIZE=small
ESCRIBE_PORTAL_URL=https://pub-vernon.escribemeetings.com
